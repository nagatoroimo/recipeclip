<div id="wrapper">
    <%= render "layouts/flash" %>
    
    <div id="page_body">
        <div id="main_contents_index">
            <div id="notice_contribution">
                <%= form_tag(notices_path, method: :post) do %>
                    <div id="notice_title">
                        <p class="sub_title">お知らせタイトル</p>
                        <input name="title" placeholder="お知らせタイトルを入力してください。">
                    </div>
                    <div id="notice_content">
                        <p class="sub_title">お知らせ内容</p>
                        <textarea name="content" placeholder="お知らせ内容を入力してください。"></textarea>
                    </div>
                    <div id="contribution_btn">
                        <input type="submit" value="お知らせを投稿する">
                    </div>
                <% end %>
            </div>
        </div>

        <div id="side_contents_common">
            <div id="sponsor">
            </div>
        </div>
    </div>
</div>